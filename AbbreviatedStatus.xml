<Ui xmlns="http://www.blizzard.com/wow/ui/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
  <Script file="AbbreviatedStatus.lua"/>

  <Frame name="TextStatusBarTextPercentTemplate" virtual="true">
    <Layers>
      <Layer level="BACKGOUND">
        <FontString name="$parentText" parentKey="text" inherits="TextStatusBarText">
          <Anchors>
            <Anchor point="CENTER">
              <Offset>
                <AbsDimension x="-20" y="3"/>
              </Offset>
            </Anchor>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
  </Frame>

  <Frame>
    <Scripts>
      <OnLoad>
        if ( not ROMANSPECTOR_DISCORD ) then
          ROMANSPECTOR_DISCORD = true;
          DEFAULT_CHAT_FRAME:AddMessage("|cffbaf5aeAbbreviatedStatus|r: even more useful addons in my Discord group |cff44d3e3https://discord.gg/wXw6pTvxMQ|r");
        end
      </OnLoad>
    </Scripts>
  </Frame>
</Ui>